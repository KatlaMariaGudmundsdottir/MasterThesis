	year = {2024},
	note = {Publisher: Frontiers},
	keywords = {Compliant robot, Robot modelling, Trajectory tracking, continuum robot, path following, robot control},
}

@article{aner_modeling_2023,
	title = {Modeling and {Trajectory} {Tracking} {Control} for a {Multi}-{Section} {Continuum} {Manipulator}},
