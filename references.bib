	pages = {49},
}

@article{lai_verticalized-tip_2022,
	title = {Verticalized-{Tip} {Trajectory} {Tracking} of a {3D}-{Printable} {Soft} {Continuum} {Robot}: {Enabling} {Surgical} {Blood} {Suction} {Automation}},
	volume = {27},
	issn = {1941-014X},
	shorttitle = {Verticalized-{Tip} {Trajectory} {Tracking} of a {3D}-{Printable} {Soft} {Continuum} {Robot}},
