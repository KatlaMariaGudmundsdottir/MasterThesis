@article{pekris_model-based_2024,
	title = {Model-based trajectory tracking of a compliant continuum robot},
	volume = {11},
	issn = {2296-9144},
	url = {https://www.frontiersin.org/journals/robotics-and-ai/articles/10.3389/frobt.2024.1358857/full},
	doi = {10.3389/frobt.2024.1358857},
	abstract = {{\textless}p{\textgreater}{\textless}bold{\textgreater}Introduction:{\textless}/bold{\textgreater} Compliant mechanisms, especially continuum robots, are becoming integral to advancements in minimally invasive surgery due to their ability to autonomously navigate natural pathways, significantly reducing collision severity. A major challenge lies in developing an effective control strategy to accurately reflect their behavior for enhanced operational precision.{\textless}/p{\textgreater}{\textless}p{\textgreater}{\textless}bold{\textgreater}Methods:{\textless}/bold{\textgreater} This study examines the trajectory tracking capabilities of a tendon-driven continuum robot at its tip. We introduce a novel feedforward control methodology that leverages a mathematical model based on Cosserat rod theory. To mitigate the computational challenges inherent in such models, we implement an implicit time discretization strategy. This approach simplifies the governing equations into space-domain ordinary differential equations, facilitating real-time computational efficiency. The control strategy is devised to enable the robot tip to follow a dynamically prescribed trajectory in two dimensions.{\textless}/p{\textgreater}{\textless}p{\textgreater}{\textless}bold{\textgreater}Results:{\textless}/bold{\textgreater} The efficacy of the proposed control method was validated through experimental tests on six different demand trajectories, with a motion capture system employed to assess positional accuracy. The findings indicate that the robot can track trajectories with an accuracy within 9.5\%, showcasing consistent repeatability across different runs.{\textless}/p{\textgreater}{\textless}p{\textgreater}{\textless}bold{\textgreater}Discussion:{\textless}/bold{\textgreater} The results from this study mark a significant step towards establishing an efficient and precise control methodology for compliant continuum robots. The demonstrated accuracy and repeatability of the control approach significantly enhance the potential of these robots in minimally invasive surgical applications, paving the way for further research and development in this field.{\textless}/p{\textgreater}},
	language = {English},
	urldate = {2025-02-14},
	journal = {Frontiers in Robotics and AI},
	author = {Pekris, Solomon and Williams, Robert D. and Atkins, Thibaud and Georgilas, Ioannis and Bailey, Nicola},
