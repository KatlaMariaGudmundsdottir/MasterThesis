	number = {4},
	urldate = {2025-02-14},
	journal = {Neurosurgery},
	author = {Unsgaard, Geirmund and Ommedal, Steinar and Muller, Tomm and Gronningsaeter, Aage and Nagelhus Hernes, Toril A.},
	month = apr,
	year = {2002},
	keywords = {ultrasound},
	pages = {804},
}

@article{unsgaard_brain_2002,
	title = {Brain {Operations} {Guided} by {Real}-time {Two}-dimensional {Ultrasound}: {New} {Possibilities} as a {Result} of {Improved} {Image} {Quality}},
