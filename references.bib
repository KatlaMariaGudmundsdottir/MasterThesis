	keywords = {Human brain, Hyperelastic modeling, Mechanical testing, Mooney Rivlin model, Ogden model, brain modelling},
	pages = {319--340},
}

@article{al_abed_finite_2022,
	title = {Finite {Element} {Modeling} of {Magnitude} and {Location} of {Brain} {Micromotion} {Induced} {Strain} for {Intracortical} {Implants}},
